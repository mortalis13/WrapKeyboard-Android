<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
  <item android:state_pressed="true">
    <shape android:shape="rectangle">
      <solid android:color="@color/key_popup_background_pressed"/>
      <stroke android:width="1dp" android:color="@color/key_popup_background_stroke" />
    </shape>
  </item>
  
  <item>
    <shape android:shape="rectangle">
      <solid android:color="@color/key_popup_background_default"/>
      <stroke android:width="1dp" android:color="@color/key_popup_background_stroke" />
    </shape>
  </item>
</selector>  